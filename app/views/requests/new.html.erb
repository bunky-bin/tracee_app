
<%= console %>

<div class="container">
  <div class="row justify-content-center" style="margin: 24px;">
    <h1 style = "text-align: center;">New Booking  </h1>
    <div class="col-6">
      <%=  simple_form_for(Request.new, :url => { :action => "create" }) do |f|%>

       <%= f.text_field :helper_id,  type: "hidden" %>
       <%= f.text_field :commuter_id,  type: "hidden"  %>
       <%= f.text_field :location,  type: "hidden"  %>
        <div class="row justify-content-center">
          <%= f.submit class: 'btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
